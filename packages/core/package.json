{
    "name": "@n8n-as-code/core",
    "version": "0.1.0",
    "description": "Core library for n8n-as-code ecosystem",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "prebuild": "node ../../scripts/generate-n8n-index.cjs && node ../../scripts/compare-extraction.mjs || echo 'Warning: Schema extraction failed'",
        "build": "tsc -b",
        "postbuild": "mkdir -p dist/assets && cp src/assets/n8n-nodes-index.json dist/assets/",
        "watch": "tsc -b -w",
        "test": "jest",
        "validate-schema": "node ../../scripts/validate-schema.js --schema ./src/assets/n8n-nodes-index.json"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chokidar": "^5.0.0",
        "deep-equal": "^2.2.3",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/chokidar": "^1.7.5",
        "@types/deep-equal": "^1.0.4",
        "@types/jest": "^29.5.11",
        "@types/node": "^25.0.3",
        "dotenv": "^16.3.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "files": [
        "dist/",
        "src/assets/n8n-nodes-index.json"
    ]
}