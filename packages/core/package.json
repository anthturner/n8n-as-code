{
    "name": "@n8n-as-code/core",
    "version": "0.3.2",
    "description": "Core library for n8n-as-code ecosystem",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "prebuild": "node ../../scripts/compare-extraction.mjs || echo 'Warning: Report generation skipped/failed'",
        "build": "tsc -b",
        "watch": "tsc -b -w",
        "clean": "rm -rf dist tsconfig.tsbuildinfo",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "npx tsx --test tests/unit/*.test.ts",
        "test:integration": "npx tsx --test tests/integration/*.test.ts",
        "validate-schema": "node ../../scripts/validate-schema.js --schema ./src/assets/n8n-nodes-index.json"
    },
    "dependencies": {
        "@types/json-stable-stringify": "^1.1.0",
        "axios": "^1.6.0",
        "chokidar": "^5.0.0",
        "deep-equal": "^2.2.3",
        "json-stable-stringify": "^1.3.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/chokidar": "^1.7.5",
        "@types/deep-equal": "^1.0.4",
        "@types/jest": "^29.5.11",
        "@types/node": "^25.0.3",
        "dotenv": "^16.3.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "files": [
        "dist/",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    }
}
