{
    "name": "@n8n-as-code/skills",
    "version": "0.13.2",
    "description": "AI Agent Skills for n8n-as-code (Search, Get Schema)",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "n8nac-skills": "./dist/cli.js"
    },
    "scripts": {
        "prebuild": "node ../../scripts/ensure-n8n-cache.cjs && node ../../scripts/generate-n8n-index.cjs && node ../../scripts/download-complete-docs.cjs && node ../../scripts/build-complete-index.cjs && node ../../scripts/enrich-nodes-technical.cjs && node ../../scripts/build-knowledge-index.cjs && node ../../scripts/build-workflow-index.cjs",
        "build": "tsc -b",
        "postbuild": "mkdir -p dist/assets && cp src/assets/*.json dist/assets/",
        "clean": "rm -rf dist tsconfig.tsbuildinfo",
        "test": "node --experimental-vm-modules ../../node_modules/.bin/jest",
        "build:adapters": "node scripts/build-claude-adapter.js"
    },
    "dependencies": {
        "@n8n-as-code/sync": "0.9.0",
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "flexsearch": "^0.8.212"
    },
    "devDependencies": {
        "@types/flexsearch": "^0.7.6",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.0",
        "fast-glob": "^3.3.3",
        "fs-extra": "^7.0.1",
        "jest": "^29.7.0",
        "simple-git": "^3.30.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "files": [
        "dist/"
    ],
    "publishConfig": {
        "access": "public"
    }
}