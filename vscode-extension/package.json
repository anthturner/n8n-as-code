{
  "name": "n8n-as-code",
  "displayName": "n8n as code",
  "description": "Edit your n8n workflows directly in VS Code with AI assistance.",
  "version": "0.0.1",
  "publisher": "etienne-lescot",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Data Science",
    "Machine Learning"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:n8n-workflows-view"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "n8n-explorer",
          "title": "n8n",
          "icon": "$(server-process)"
        }
      ]
    },
    "views": {
      "n8n-explorer": [
        {
          "id": "n8n-workflows-view",
          "name": "Workflows",
          "contextualTitle": "n8n Workflows"
        }
      ]
    },
    "configuration": {
      "title": "n8n as code",
      "properties": {
        "n8n.host": {
          "type": "string",
          "default": "http://localhost:5678",
          "description": "L'URL de votre instance n8n"
        },
        "n8n.apiKey": {
          "type": "string",
          "default": "",
          "description": "Votre clÃ© API n8n (Settings > Developer API)"
        }
      }
    },
    "commands": [
      {
        "command": "n8n.refreshWorkflows",
        "title": "Refresh Workflows",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "n8n.refreshWorkflows",
          "when": "view == n8n-workflows-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EtienneLescot/n8n-as-code"
  }
}
